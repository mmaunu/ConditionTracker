<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextSerif">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>        
        <item name="android:typeface">serif</item>
    </style>
    
    <style name="TextSerif.Black">
    	<item name="android:textColor">#000000</item>
    </style>
    
    <style name="MyBigButton">
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dip</item>        
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingRight">10dip</item>        
        <item name="android:paddingLeft">10dip</item>
    </style>
    
    <style name="DiceRollerTabButtons">
    	<item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>        
        <item name="android:gravity">center</item>
    </style>
   
    <style name="HorizontalRule">
    	<item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dip</item>        
        <item name="android:background">#FF808A87</item>
    </style>
</resources>

